---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CookieBanner from '../components/CookieBanner.astro';
import { siteMap } from '../data/siteMap';
import { company } from '../data/company';
interface Props {
  title: string;
  description?: string;
}
const { title, description } = Astro.props;

---

<html lang="es">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/FaviconReina.svg" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <title>{ title } | Reina Multiservicios</title>
    {
      description &&
      (<meta name="description" content={description} />)
    }
    <script 
      type="application/ld+json"
      set:html={ JSON.stringify({
          "@context": "https://schema.org",
          "@type": "LocalBusiness",
          "@id": "https://reinamultiservicios.es/#localbusiness",
          "name": company.name,
          "legalName": company.name,
          "url": "https://reinamultiservicios.es",
          "telephone": company.phoneList[0].phoneLink.replace('tel:', ''),
          "email": company.mails[0],
          "address": {
            "@type": "PostalAddress",
            "streetAddress": company.address,
            "addressLocality": "La Nucia",
            "addressRegion": "Alicante",
            "postalCode": "03530",
            "addressCountry": "ES"
          },
          "areaServed": {
            "@type": "AdministrativeArea",
            "name": "Alicante"
          },
          "priceRange": "€€" 
      })} 
    />
    <script>
      document.addEventListener('DOMContentLoaded', ()=>{
        document.querySelectorAll('img[data-fade]').forEach(img => {
          if (img.complete) {
            img.classList.add('is-loaded');
          } else {
            img.addEventListener('load', () => {
              img.classList.add('is-loaded');
            });
          }
        });
      });
    </script>
	</head>
  
  <!-- Google tag (gtag.js) -->


  <!-- Fin del Head. Inicio del body -->

	<body>
    <Navbar siteMap={ siteMap } />
    <slot />
    <Footer />
  <CookieBanner />
	</body>
</html>
